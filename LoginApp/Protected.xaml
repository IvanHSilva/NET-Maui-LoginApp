<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginApp.Protected"
             Title="Protected">
    
    <VerticalStackLayout VerticalOptions="Center" Padding="10" Spacing="10">

        <Border>
            <VerticalStackLayout>

                <Label Text="Você está logado!" FontSize="Large" 
                       HorizontalTextAlignment="Center" Margin="5"/>
                <Label x:Name="welcome_label" 
                       HorizontalTextAlignment="Center" Margin="15"/>
                <Button Text="Logout" HorizontalOptions="Center" 
                        Clicked="Button_Clicked" Margin="15"/>
                
            </VerticalStackLayout>
        </Border>
        
    </VerticalStackLayout>
</ContentPage>